@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Category
@using AnimalShelter.Models

<h2>Category Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Species): @Html.DisplayFor(model => model.Species)<h3>

@if (@Model.Animals.Count == 0)
{
  <h3>No animals have been added to this category yet!</h3>
} 
else
{
  <h3>Animals:</h3>
  <ul>
    @foreach (Animal animal in Model.Animals)
    {
      <li>@Html.ActionLink($"{animal.Name}", "Details", "Animals", new { id = animal.AnimalId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Edit Category", "Edit", new { id = Model.CategoryId })</p>
<p>@Html.ActionLink("Delete Category", "Delete", new { id = Model.CategoryId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>